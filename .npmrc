# Disable npm cache in production builds to prevent EBUSY errors
cache=/tmp/.npm
update-notifier=false
fund=false
audit=false
progress=false
# Use exact versions to ensure reproducible builds
save-exact=true
# Use modern npm syntax to avoid warnings
include=optional
# Force platform-specific binary installation for Linux x64
target_platform=linux
target_arch=x64
target_libc=glibc
# Ignore post-install scripts that cause esbuild version conflicts
# This prevents @esbuild-kit from breaking the build on Railway
ignore-scripts=false
legacy-peer-deps=false