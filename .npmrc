# Disable npm cache in production builds to prevent EBUSY errors
cache=/tmp/.npm
update-notifier=false
fund=false
audit=false
progress=false
# Use exact versions to ensure reproducible builds
save-exact=true
# Allow optional dependencies for platform-specific binaries (required for Rollup)
optional=true
# Force platform-specific binary installation for Linux x64
target_platform=linux
target_arch=x64
target_libc=glibc